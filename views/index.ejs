<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Aberdeen Energy Hub' %></title>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/bootstrap-custom.css" />

    <!-- Favicon -->
    <link
      rel="icon"
      type="image/x-icon"
      href="https://cdn-icons-png.flaticon.com/512/3097/3097143.png"
    />
  </head>
  <body>
    <!-- Navigation -->
    <%- include('./partials/navbar', { page: page }) %>

    <!-- Main Content -->
    <main>
      <!-- Hero Section -->
      <section class="hero-section">
        <div class="container text-center">
          <h1 class="display-4 fw-bold mb-4">Aberdeen Energy Hub</h1>
          <p class="lead mb-4">Dynamic Web Technologies • CE2000 Assessment</p>

          <!-- API Status -->
          <div class="mb-4">
            <span class="api-status status-online" id="api-status">
              <i class="fas fa-sync-alt fa-spin me-2"></i>
              <span id="api-status-text"
                >Click navbar buttons to load API data</span
              >
            </span>
            <button id="refresh-all" class="btn btn-outline-light ms-3">
              <i class="fas fa-sync-alt me-2"></i> Load All Data
            </button>
          </div>

          <!-- Stats -->
          <div class="row mt-4" id="stats-container">
            <% if (data && data.stats) { %> <% data.stats.forEach(stat => { %>
            <div class="col-md-3 col-6 mb-4">
              <div class="stat-card">
                <div class="stat-number"><%= stat.value %></div>
                <div class="stat-label"><%= stat.label %></div>
              </div>
            </div>
            <% }) %> <% } %>
          </div>
        </div>
      </section>

      <!-- API Data Sections -->
      <div class="container-fluid px-0">
        <!-- Companies Section -->
        <section id="companies" class="py-5 bg-light">
          <div class="container">
            <h2 class="section-title">
              <i class="fas fa-building me-3"></i>
              Energy Companies
            </h2>
            <p class="text-center text-muted mb-4">
              Click "Load API Data" in navbar → "Companies" to load this section
            </p>
            <div class="row g-4" id="companies-data">
              <div class="col-12 text-center">
                <div class="alert alert-info">
                  <i class="fas fa-info-circle me-2"></i>
                  Use the navbar dropdown to load Companies data
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Market Data Section -->
        <section id="market" class="py-5">
          <div class="container">
            <h2 class="section-title">
              <i class="fas fa-chart-line me-3"></i>
              Live Market Data
            </h2>
            <p class="text-center text-muted mb-4">
              Click "Load API Data" in navbar → "Market Data" to load this
              section
            </p>
            <div class="row g-4" id="market-data">
              <div class="col-12 text-center">
                <div class="alert alert-info">
                  <i class="fas fa-info-circle me-2"></i>
                  Use the navbar dropdown to load Market data
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- News Section -->
        <section id="news" class="py-5 bg-light">
          <div class="container">
            <h2 class="section-title">
              <i class="fas fa-newspaper me-3"></i>
              Industry News
            </h2>
            <p class="text-center text-muted mb-4">
              Click "Load API Data" in navbar → "News" to load this section
            </p>
            <div class="row g-4" id="news-data">
              <div class="col-12 text-center">
                <div class="alert alert-info">
                  <i class="fas fa-info-circle me-2"></i>
                  Use the navbar dropdown to load News data
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Weather Section -->
        <section id="weather" class="py-5">
          <div class="container">
            <h2 class="section-title">
              <i class="fas fa-cloud-sun me-3"></i>
              Aberdeen Weather
            </h2>
            <p class="text-center text-muted mb-4">
              Click "Load API Data" in navbar → "Weather" to load this section
            </p>
            <div class="row" id="weather-data">
              <div class="col-12 text-center">
                <div class="alert alert-info">
                  <i class="fas fa-info-circle me-2"></i>
                  Use the navbar dropdown to load Weather data
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Projects Section -->
        <section id="projects" class="py-5 bg-light">
          <div class="container">
            <h2 class="section-title">
              <i class="fas fa-project-diagram me-3"></i>
              Energy Projects
            </h2>
            <p class="text-center text-muted mb-4">
              Click "Load API Data" in navbar → "Projects" to load this section
            </p>
            <div class="row" id="projects-data">
              <div class="col-12 text-center">
                <div class="alert alert-info">
                  <i class="fas fa-info-circle me-2"></i>
                  Use the navbar dropdown to load Projects data
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3"></div>

    <!-- Custom JavaScript -->
    <script src="/js/config.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
